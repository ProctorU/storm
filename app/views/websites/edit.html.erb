<div class="page-header">
  <h4 class="page-title"><%= t(".title", website_name: @website.name) %></h4>
  <h5 class="page-subtitle"><%= t(".subtitle") %></h5>

  <div class="page-actions">
    <%= link_to(t('.back', website_name: @website.name), website_path(@website),
      class: "btn btn-secondary btn-sm") %>
  </div>
</div>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card card-body mb-3">
      <%= render("form", website: @website) %>
    </div>
  </div>
</div>
