<div class="page-header">
  <h4 class="page-title"><%= @website.name %></h4>
  <h5 class="page-subtitle"><%= t(".subtitle") %></h5>
</div>

<div class="row">
  <div class="col-md-4">
    <%= link_to(website_charts_response_time_index_path(@website),
      class: "card card-link mb-3") do %>
      <div class="card-body text-muted text-center d-flex align-items-center justify-content-center">
        <i class="mr-3" data-feather="bar-chart"></i>
        <h6 class="mb-0"><%= t('.response_times') %></h6>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to(edit_website_path(@website),
      class: "card card-link mb-3") do %>
      <div class="card-body text-muted text-center d-flex align-items-center justify-content-center">
        <i class="mr-3" data-feather="edit"></i>
        <h6 class="mb-0"><%= t('.edit') %></h6>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to(website_path(@website),
      method: :delete,
      data: { prompt: t('.destroy_confirm', name: @website.name) },
      class: "card card-link mb-3") do %>
      <div class="card-body text-muted text-center d-flex align-items-center justify-content-center pointerless">
        <i class="mr-3" data-feather="trash-2"></i>
        <h6 class="mb-0"><%= t('.destroy') %></h6>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @pings.any? %>
      <div class="card card-body mb-3" data-behavior="pings-list">
        <%= render(partial: 'pings/ping', collection: @pings, as: :ping) %>
      </div>

      <div class="d-flex justify-content-center" data-behavior="pagination-wrapper">
        <%= paginate(@pings) %>
      </div>
    <% else %>
      <%= render("shared/blankslate", resource: t('.resource')) %>
    <% end %>
  </div>
</div>
